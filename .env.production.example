# ── Production Environment Variables ─────────────────────────────────
# Copy to .env.production and fill in all values.
# NEVER commit .env.production to git.

# ── Domain ────────────────────────────────────────────────────────────
DOMAIN=your-domain.com

# ── Database ──────────────────────────────────────────────────────────
DB_USER=whatsapp_bot
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DB_NAME=whatsapp_bot
DB_PORT=5432

# ── Redis ─────────────────────────────────────────────────────────────
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_URL=redis://:CHANGE_ME_REDIS_PASSWORD@redis:6379

# ── API ───────────────────────────────────────────────────────────────
NODE_ENV=production
API_PORT=4000
DATABASE_URL=postgresql://whatsapp_bot:CHANGE_ME_STRONG_PASSWORD@postgres:5432/whatsapp_bot

# ── Auth ──────────────────────────────────────────────────────────────
# Generate with: openssl rand -hex 32
JWT_SECRET=CHANGE_ME_64_CHAR_HEX_STRING
JWT_REFRESH_SECRET=CHANGE_ME_DIFFERENT_64_CHAR_HEX_STRING

# ── Encryption ────────────────────────────────────────────────────────
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=CHANGE_ME_64_CHAR_HEX_STRING
# Key rotation (set ENCRYPTION_KEY_v1 to old key when rotating):
# ENCRYPTION_KEY_v1=OLD_KEY_HEX_STRING

# ── WhatsApp ──────────────────────────────────────────────────────────
WEBHOOK_VERIFY_TOKEN=CHANGE_ME_WEBHOOK_TOKEN

# ── n8n ───────────────────────────────────────────────────────────────
N8N_WEBHOOK_URL=https://your-domain.com/n8n/webhook/whatsapp-events
AUTOMATION_API_KEY=CHANGE_ME_AUTOMATION_SECRET_32_CHARS
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=CHANGE_ME_N8N_PASSWORD

# ── Stripe ────────────────────────────────────────────────────────────
STRIPE_SECRET_KEY=sk_live_CHANGE_ME
STRIPE_WEBHOOK_SECRET=whsec_CHANGE_ME
STRIPE_PRICE_ID_PRO=price_CHANGE_ME_PRO
STRIPE_PRICE_ID_BUSINESS=price_CHANGE_ME_BUSINESS

# ── Dashboard ─────────────────────────────────────────────────────────
DASHBOARD_URL=https://your-domain.com
CORS_ORIGIN=https://your-domain.com
NEXT_PUBLIC_API_URL=https://your-domain.com/api
